head
  title Todo List
body
  .container
    header
      h1 Todo Listings ({{incompleteCount}})
      label.hide-completed
        input(type="text" name="text" checked="{{hideCompleted}}")
      +loginButtons
      if currentUser
        form.new-task
          input(type="text" name="text" placeholder="Type here to add new tasks")
      ul
        each tasks
          +task

template(name="task")
  li(class="{{#if checked}}checked{{/if}} {{#if private}}private{{/if}}")
    button.delete &times;
    input.toggle-checked(type="checkbox" checked="{{checked}}")
    if isOwner
      button.toggle-private
        if private
          Private
        else
          Public
    span.text {{text}}
